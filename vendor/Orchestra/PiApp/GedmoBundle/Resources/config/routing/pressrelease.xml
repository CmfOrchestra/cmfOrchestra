<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_gedmo_pressrelease" pattern="/">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:index</default>
    </route>

    <route id="admin_gedmo_pressrelease_show" pattern="/{id}/show">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:show</default>
    </route>

    <route id="admin_gedmo_pressrelease_new" pattern="/new">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:new</default>
    </route>

    <route id="admin_gedmo_pressrelease_create" pattern="/create">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_pressrelease_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_gedmo_pressrelease_update" pattern="/{id}/update">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_pressrelease_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppGedmoBundle:Pressrelease:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
