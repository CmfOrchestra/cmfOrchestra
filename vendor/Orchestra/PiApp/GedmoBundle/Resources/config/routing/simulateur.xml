<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_gedmo_simulator" pattern="/">
        <default key="_controller">PiAppGedmoBundle:Simulateur:index</default>
    </route>

    <route id="admin_gedmo_simulator_show" pattern="/{id}/show">
        <default key="_controller">PiAppGedmoBundle:Simulateur:show</default>
    </route>

    <route id="admin_gedmo_simulator_new" pattern="/new">
        <default key="_controller">PiAppGedmoBundle:Simulateur:new</default>
    </route>

    <route id="admin_gedmo_simulator_create" pattern="/create">
        <default key="_controller">PiAppGedmoBundle:Simulateur:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_simulator_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppGedmoBundle:Simulateur:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_gedmo_simulator_update" pattern="/{id}/update">
        <default key="_controller">PiAppGedmoBundle:Simulateur:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_simulator_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppGedmoBundle:Simulateur:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
