						{% set resume = entities|reset %}
						<section class="whatIsHot">
							<div class="whatsHotSectionHeader">
								{% if resume.media.image.id is defined %}
								{#{{ getService('sonata.media.twig.extension').media(resume.media.image, 'reference', {'title': '', 'alt': '', 'width':'486px', 'height':'237px'})|raw }}#}
									<img src="#" delayedsrc="{{ media_url(resume.media.image.id, 'reference', true, resume.media.getUpdatedAt(), 'sicap_news_') }}" title="" alt="" width="486px" height="237px" />
								{% endif %}
							</div>
                            <div class="whatsHotruban"><span>{{ resume.translate(locale).getTitle()|limite("0", 55)|raw }}</span></div>
                            <div class="sectionContent">
                                <div class="whatsHotImgCaption">
									{{ resume.translate(locale).getDescriptif()|replace({'<p>': '', '</p>': ''})|raw }}
                                </div>
                                <p class="text">
									{{ resume.translate(locale).getContent()|replace({'<p>': '', '</p>': ''})|raw }} 
                                </p>
                                <div class="text">{{ resume.publishedat|localedate('long','medium', app.request.locale, 'EEEE, LLLL d, y') }}</div>
                                <div class="clearfix row">
                                	{%  set url = "#" %}
                                	{% if resume.pagedetail.getId() is defined %}
	                            		{%  set url = path_url(resume.pagedetail.getRouteName(), {'locale':app.request.locale, 'slug':resume.translate(app.request.locale).getSlug()}) %}
	                            	{% endif %}
                                    <a href="{{ url }}" title="MoreInfo" class="btnVertWhatsHot fright"><span class="btnVertFlecheWhatsHot">Read More</span></a> 
                                </div>
                                <div class="clearfix row">
                                    <div class="discoverText text fright">
                                    	Discover 
                                    	<span class="colorBlue">
                                    		<a href="{{ path_url('page_news', {'locale':locale}) }}">
                                    			All Sicap News
                                    		</a>
                                    	</span>
                                    </div>
                                </div>
                            </div>
						</section>