						{% if entity.getId() is defined %}
						<div class="useCasesMainText" id="sicapNewsMainText">
							<h1 class="articleTitle">{{ entity.translate(locale).getTitle()|limite("0", 55)|raw }}</h1>
							<div class="sicapNewsContent">
								<div id="sicapNewsHeader" class="clearfix row">
									<p  class="fleft">
										{{ entity.translate(locale).getDescriptif()|replace({'<p>': '', '</p>': ''})|raw }}
									</p>
									{% if entity.media.image.id is defined %}
									{#{{ getService('sonata.media.twig.extension').media(entity.media.image, 'reference', {'title': '', 'alt': '', 'style':'fright'})|raw }}#}
									<img src="#" delayedsrc="{{ media_url(entity.media.image.id, 'reference', true, entity.media.getUpdatedAt(), 'sicap_news_') }}" title="" alt="" />
									{% endif %}
								</div>
								<div id="sicapNewsBody" class="clearfix row">
								    {% set maChaine			= entity.translate(locale).getContentdetail()|striptags|trim  %}
									{% set length_content 	= maChaine|length %}
									
									{% set left_param 		= maChaine | truncate(length_content/2, true, '') | trim %}
									{% set nbchar8para1 	= left_param | length %}
									{% set right_param 		= maChaine | substr(nbchar8para1- length_content) %}
									<div class="fleft"> 
									{#
										{% set content		= entity.translate(locale).getContent()|trim  %}
										{% set nb_cont 		= content|length %}
										{% set left_cont 	= content|cutText(nb_cont/2) %}
										{{ left_cont|raw }}
									#}
										<P>{{ left_param|raw }}</P>
									</div>
									<div class="fright">
										{#
											{% set right_cont 	= content|cutText(nb_cont/2, true) %}
											{{ right_cont|raw }}
										#}
										<P>{{ right_param|raw }}</P>
									</div>
								</div>
							</div>
						</div>
						{% endif %}
