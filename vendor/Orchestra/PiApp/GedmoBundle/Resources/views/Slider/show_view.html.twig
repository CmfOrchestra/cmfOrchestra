	<table class="grid">
		<caption>Slider</caption>
	    <tbody>	
	        <tr>
	            <th>Id</th>	
	            <td>{{ entity.id }}</td>	
	        </tr>	
	        <tr>
	            <th>Enabled</th>	
	            <td>{{ entity.enabled }}</td>	
	        </tr>	
	        <tr>
	            <th>Category</th>	
	            <td>{{ entity.category }}</td>	
	        </tr>	
	        <tr>
	            <th>Title</th>	
	            <td>{{ entity.title }}</td>	
	        </tr>	
	        <tr>
	            <th>Subtitle</th>	
	            <td>{{ entity.subtitle }}</td>	
	        </tr>	
	        <tr>
	            <th>Descriptifleft</th>	
	            <td>{{ entity.descriptifleft }}</td>	
	        </tr>	
	        <tr>
	            <th>Descriptifright</th>	
	            <td>{{ entity.descriptifright }}</td>	
	        </tr>
	        <tr>
	            <th>Css Class</th>	
	            <td>{{ entity.CssClass }}</td>	
	        </tr>	        	
	        <tr>
	            <th>Created_at</th>	
	            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Updated_at</th>	
	            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Published_at</th>	
	            <td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Archive_at</th>	
	            <td>{{ entity.archiveat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	        	<th>Media</th>
	        	<td>
	        		{% if entity.media.image is defined %}
	        			{% media entity.media.image, 'reference' %}
	        		{% endif %}
	        	</td>
	        </tr>
	    </tbody>
	</table>

	{% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
	<ul class="ui-widget-header">
		<li>
	        <form action="{{ path('admin_gedmo_slider', {'NoLayout':NoLayout, 'category':category}) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
		</li>
			<li>
	        <form action="{{ path('admin_gedmo_slider_edit', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.edit'|trans }}</button>
	        </form>	        
		</li>
	    <li>
	        <form action="{{ path('admin_gedmo_slider_delete', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	</ul>
	
	<script type="text/javascript">
	//<![CDATA[
		$(document).ready(function() {
			$("button[type='submit']").button();
		});
	//]]>
	</script>
	{% endif %}	