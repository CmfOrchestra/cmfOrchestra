{%  initJquery 'FORM:prototype-bytab' %}
{% if NoLayout %}
	{% set layout_nav = 'PiAppTemplateBundle::Template\\Layout\\layout-ajax.html.twig' %}
{% else %}
	{% set layout_nav = app.request.attributes.get('orchestra-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
	<h1>Corporation</h1>
{% endblock %}
 
{% block content %}

	<!-- Begin tag markup -->
	<div id="tabs">
		<ul>
			<li>
				<a href="#tabs-1" title="{{ 'pi.form.title.default.update'|trans }}">{{ 'pi.form.title.default.update'|trans }}</a> 
			</li>
		</ul>

		{% form_theme edit_form getParameter('pi_app_admin.layout.template.form') %}
		<form class="myform" action="{{ path('admin_gedmo_corporation_update', { 'id': entity.id, 'NoLayout': NoLayout, 'category':category, 'type':type }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
		    <div id="tabs-1">
		    	{{ form_widget(edit_form) }}
		    </div>
		    <p>
		        <!-- <input id="add_tab" type="button" value="{{ 'pi.grid.action.add-tab'|trans }}" /> -->
		        <button type="submit">{{ 'pi.grid.action.save'|trans }}</button>
		    </p>		    
		</form>
		
	</div>
	<!-- End tag markup -->	
	
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'Translate'} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}
		
		
	<ul class="ui-widget-header">
		<li>
			{% if type == "aderent" %}
			<form action="{{ path('admin_gedmo_list_adherent', { 'NoLayout': NoLayout, 'category':category }) }}" method="post">
        		<button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>
			{% elseif type == "event" %}
			<form action="{{ path('admin_gedmo_lamelee_event_subscribers', { 'NoLayout': NoLayout, 'category':category }) }}" method="post">
        		<button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>
            {% else %}
            <form action="{{ path('admin_gedmo_corporation', { 'NoLayout': NoLayout, 'category':category }) }}" method="post">
            	<button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>
            {% endif %}
		</li>
		{% if (NoLayout == false) and (type is empty) %}
	    <li>
	        <form action="{{ path('admin_gedmo_corporation_delete', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category}) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}    
	</ul>
	
	{% if entity.media.image is defined %}
	{{ picture_form(entity.media.image, 'piapp_gedmobundle_corporationtype_media_image_binaryContent', 'reference')|raw }}
	{% endif %}
	
	{% if entity.media2.image is defined %}
	{{ picture_form(entity.media2.image, 'piapp_gedmobundle_corporationtype_media2_image_binaryContent', 'reference')|raw }}
	{% endif %}
		
	<script type="text/javascript">
	//<![CDATA[
	        j_prototype_bytabs.ftc_accordion_form("job_collection", "{{ 'pi.corporation.form.group.job'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("info1_collection", "{{ 'pi.corporation.form.group.info1'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("info2_collection", "{{ 'pi.corporation.form.group.info2'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_entre_collection", "{{ 'pi.corporation.form.group.contact.entre'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_mother_collection", "{{ 'pi.corporation.form.group.contact.entre.mother'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_facuration_collection", "{{ 'pi.corporation.form.group.contact.entre.facturation'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("social_collection", "{{ 'pi.corporation.form.group.social'|trans }}", ".myform");
			j_prototype_bytabs.ftc_accordion_form("image_collection", "{{ 'pi.corporation.form.group.picture'|trans }}", ".myform");			        
	//]]>
	</script>	
{% endblock %}		