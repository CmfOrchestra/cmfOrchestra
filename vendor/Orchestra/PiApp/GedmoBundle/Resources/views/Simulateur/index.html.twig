{% initJquery 'GRID:grid-table' %}
{% stylesheet getParameter('pi_app_admin.admin.theme_css')~':prepend' %}
{% if NoLayout %}
	{% stylesheet 'bundles/piappadmin/css/layout/admin/screen.css' %}
	{% javascript 'bundles/piappadmin/js/jquery/custom_jquery.js' %}
	{% set layout_nav = 'PiAppTemplateBundle::Template\\Layout\\layout-ajax.html.twig' %}
{% else %}
	{% set layout_nav = app.request.attributes.get('orchestra-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
	<h1>Simulateur</h1>
{% endblock %}
 
{% block content %}

		{% if NoLayout == false %}
	<!--  start actions-box ............................................... -->
	<div id="actions-box">
		<!-- <a href="" class="action-slider"><span>{{ 'pi.grid.action.title'|trans }}</span></a> -->
		<!-- <div id="actions-box-slider"> -->
			<a href="{{ path('admin_gedmo_simulator_new', {'NoLayout':NoLayout, 'category':category}) }}" class="action-edit" title="{{ 'pi.grid.action.create'|trans }}">{{ 'pi.grid.action.create'|trans }}</a>
		<!-- </div> -->
		<div class="clear"></div>
	</div>
	<!-- end actions-box........... -->
	{% endif %}
	
	<table id="grid_simulateur" class="grid" >
	    <thead>
	        <tr>	            
	            <th>Id</th>	            
	            <th>Title</th>	            
	            <th>Tfs</th>	            
	            <th>T</th>	            
	            <th>Ps</th>	            
	            <th>Ps0</th>	            
	            <th>Tfsv</th>	            
	            <th>Versement_initial_min</th>	            
	            <th>Mensualite_min</th>	            
	            <th>Created_at</th>	            
	            <th>Updated_at</th>	            
	            <th>Published_at</th>	            
	            <th>Archive_at</th>	            
	            <th>Archived</th>	            
	            <th>Enabled</th>	        	
	            <th class="position" >Position</th>	            
	            <th>Heritage</th>	        
	            <th><a href="javascript:void(0);" title="Actions">Actions</a></th>
	        </tr>
	    </thead>
	    <tbody>
	    {% if not isServerSide %}
		    {% set num_line = 0 %}
		    {% for entity in entities %}
		        <tr {% if(num_line == 0) %}class="odd"{% endif %}  id='{{ entity.position }}_row_{{ entity.id }}'  >		
		            <td><a href="{{ path('admin_gedmo_simulator_show', { 'id': entity.id, 'NoLayout': NoLayout, 'category':category }) }}" title="">{{ entity.id }}</a></td>		
		            <td>
		            	{{ entity.title|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.tfs|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.t|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.ps|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.ps0|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.tfsv|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.versementinitialmin|truncateText(55)|raw }}
		            </td>		
		            <td>
		            	{{ entity.mensualitemin|truncateText(55)|raw }}
		            </td>		
		            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d') }}{% endif%}</td>		
		            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d') }}{% endif%}</td>		
		            <td>{% if entity.publishedat %}{{ entity.publishedat|date('Y-m-d') }}{% endif%}</td>		
		            <td>{% if entity.archiveat %}{{ entity.archiveat|date('Y-m-d') }}{% endif%}</td>		
		            <td>
		            	{{ entity.archived|truncateText(55)|raw }}
		            </td>		
		            <td class="enabled" >{{ entity.enabled}}</td><td class="position" >{{ entity.position}}</td>		
		            <td>
		            	{{ entity.heritage|truncateText(55)|raw }}
		            </td>		
					<td><a href="{{ path('admin_gedmo_simulator_show', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" title="{{ 'pi.grid.action.show'|trans }}" class="icon-3 info-tooltip" >&nbsp;</a>
                	                	<a href="{{ path('admin_gedmo_simulator_edit', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" title="{{ 'pi.grid.action.edit'|trans }}" class="icon-1 info-tooltip" >&nbsp;</a>
                		
					</td>		
		        </tr>
		        {% if num_line == 0 %} 
		        	{% set num_line = 1 %}
		        {% else %}
		        	{% set num_line = 0 %}
		        {% endif %}	
		                
		    {% endfor %}
	    {% endif %}
	    </tbody>
	</table>

	{% set options_gridtabale = {'grid-name': 'grid_simulateur', 'grid-type':'simple', 
	        'grid-server-side': isServerSide,
			'grid-paginate':'true',
			'grid-LengthMenu':25,
			'grid-filters-select': ['0','1'],
			'grid-filters-active':'true',
			'grid-filters': { 
					'1':'Position',
					'2':'Identifiant',
				},
			'grid-sorting': { 
					'0':'asc',
				},
			'grid-visible': {
				'0':'true',
				'1':'false',
				},						
			'grid-actions': { 
					'rows_position': {'route':'admin_gedmo_simulateur_position_ajax',},
					'select_all': {'sButtonText':'pi.grid.action.select_all'},
					'select_none': {'sButtonText':'pi.grid.action.select_none'},
					'rows_enabled': {'sButtonText':'pi.grid.action.row_enabled', 'route':'admin_gedmo_simulateur_enabledentity_ajax',},
					'rows_disable': {'sButtonText':'pi.grid.action.row_disable', 'route':'admin_gedmo_simulateur_disablentity_ajax'},
					'rows_archive': {'sButtonText':'pi.grid.action.row_archive', 'route':'admin_gedmo_simulateur_archiventity_ajax'},
					'rows_delete': {'sButtonText':'pi.grid.action.row_delete', 'route':'admin_gedmo_simulateur_deletentity_ajax'},
					'copy': {'sButtonText':'pi.grid.action.copy'},
					'print': {'sButtonText':'pi.grid.action.print'},
					'export_pdf': {'sButtonText':'pi.grid.action.export'},				
					'export_csv': {'sButtonText':'pi.grid.action.export'},
					'export_xls': {'sButtonText':'pi.grid.action.export'},					
				}		
			} 			
	%}
	{{ renderJquery('GRID', 'grid-table', options_gridtabale )|raw }}	

{% endblock %}