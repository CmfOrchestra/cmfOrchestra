{% stylesheet getParameter('pi_app_admin.admin.grid_show_css') %}
{% stylesheet getParameter('pi_app_admin.admin.theme_css')~':prepend' %}
{% if NoLayout %}
	{% set layout_nav = 'PiAppTemplateBundle::Template\\Layout\\layout-ajax.html.twig' %}
{% else %}
	{% set layout_nav = app.request.attributes.get('orchestra-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
{% endblock %}
	
{% block content %}

	<table class="grid">
		<caption>Simulateur</caption>
	    <tbody>	
	        <tr>
	            <th>Id</th>	
	            <td>{{ entity.id }}</td>	
	        </tr>	
	        <tr>
	            <th>Title</th>	
	            <td>{{ entity.title }}</td>	
	        </tr>	
	        <tr>
	            <th>Tfs</th>	
	            <td>{{ entity.tfs }}</td>	
	        </tr>	
	        <tr>
	            <th>T</th>	
	            <td>{{ entity.t }}</td>	
	        </tr>	
	        <tr>
	            <th>Ps</th>	
	            <td>{{ entity.ps }}</td>	
	        </tr>	
	        <tr>
	            <th>Ps0</th>	
	            <td>{{ entity.ps0 }}</td>	
	        </tr>	
	        <tr>
	            <th>Tfsv</th>	
	            <td>{{ entity.tfsv }}</td>	
	        </tr>	
	        <tr>
	            <th>Versement_initial_min</th>	
	            <td>{{ entity.versementinitialmin }}</td>	
	        </tr>	
	        <tr>
	            <th>Mensualite_min</th>	
	            <td>{{ entity.mensualitemin }}</td>	
	        </tr>	
	        <tr>
	            <th>Created_at</th>	
	            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Updated_at</th>	
	            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Published_at</th>	
	            <td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Archive_at</th>	
	            <td>{{ entity.archiveat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Archived</th>	
	            <td>{{ entity.archived }}</td>	
	        </tr>	
	        <tr>
	            <th>Enabled</th>	
	            <td>{{ entity.enabled }}</td>	
	        </tr>	
	        <tr>
	            <th>Position</th>	
	            <td>{{ entity.position }}</td>	
	        </tr>	
	        <tr>
	            <th>Heritage</th>	
	            <td>{{ entity.heritage }}</td>	
	        </tr>	
	    </tbody>
	</table>

	{% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
	
				
	<ul class="ui-widget-header">
		<li>
	        <form action="{{ path('admin_gedmo_simulator', { 'NoLayout': NoLayout, 'category':category }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
		</li>
			<li>
	        <form action="{{ path('admin_gedmo_simulator_edit', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.update'|trans }}</button>
	        </form>	        
		</li>
			
		{% if NoLayout == false %}
	    <li>
	        <form action="{{ path('admin_gedmo_simulator_delete', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}
	    
	
	</ul>	
		<script type="text/javascript">
		//<![CDATA[
			$(document).ready(function() {
				$("button[type='submit']").button();
			});
		//]]>
		</script>
		
	{% endif %}		
		
{% endblock %}