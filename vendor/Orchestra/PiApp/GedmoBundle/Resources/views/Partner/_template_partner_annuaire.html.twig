<section class="bloc-annuHP cf">
	<div class="wrap">
		<header class="partner">
			<div class="title-border cf">
				<h3 class="tt-1 fleft"> Ils nous soutiennent</h3>
				<a href="{{ path_url('page_lamelee_menuwrapper_partenaires', {'locale':locale}) }}"> L'annuaire des partenaires</a>	
			</div>
		</header>
	
		<ul class="cf">
			{% for adherent in adh_fixe %}
			{% if adherent.pageurl.getRouteName() is defined %}
				{% set url = path_url(adherent.pageurl.getRouteName(),{'locale':locale}) %}
			{% elseif adherent.url is not empty %}
				{% set url = adherent.url %}
			{% else %}
				{% set url = "#" %}		
			{% endif %}			
			<li {% if loop.last %}class="last"{% endif %}>
				<figure>
					<a href="{{ url }}" target="_blank">
					{% if adherent.media.image.id is defined %}
						<img src="{{ media_url(adherent.media.image.id, 'reference', true, adherent.media.getUpdatedAt(), 'lamelee_partner_') }}" width="120" height="120" alt="LA MELEE"/>
					{% endif %}
					</a>
				</figure>
			</li>
			{% endfor %}
		</ul>
		<ul class="random cf">
			{% for adherent in adh_alea %}
			{% if adherent.pageurl.getRouteName() is defined %}
				{% set url = path_url(adherent.pageurl.getRouteName(),{'locale':locale}) %}
			{% elseif adherent.url is not empty %}
				{% set url = adherent.url %}
			{% else %}
				{% set url = "#" %}		
			{% endif %}			
			<li {% if loop.index0 <= 3 %}style="display: list-item;"{% endif %} {% if (loop.index0+1) is divisibleby(4) %}class="last"{% endif %}>
				<figure>
					<a href="{{ url }}" target="_blank">
					{% if adherent.media.image.id is defined %}
						<img src="{{ media_url(adherent.media.image.id, 'reference', true, adherent.media.getUpdatedAt(), 'lamelee_partner_') }}" width="120" height="120" alt="LA MELEE"/>
					{% endif %}
					</a>
				</figure>
			</li>
			{% endfor %}
		</ul>
	</div>
</section>