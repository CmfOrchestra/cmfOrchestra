{%  initJquery 'FORM:prototype-bytab' %}
{% extends app.request.attributes.get('orchestra-layout') %}

{% block title %}
	<h1>TranslationPage edit</h1>
{% endblock %}
 
{% block content %}

	{% form_theme edit_form getParameter('pi_app_admin.layout.template.form') %}
	<form class="myform" action="{{ path('admin_transpage_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
	    {{ form_widget(edit_form) }}
	    <p>
	        <button type="submit">{{ 'pi.grid.action.save'|trans }}</button>
	    </p>
	    <p/>
	</form>
	
	{% set options = {'form-name': '.myform' } %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}	
	
	<ul class="ui-widget-header myform">
	    <li>
	        <form action="{{ path('admin_pagebytrans_show', { 'id': entity.getPage().getId() }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
	    </li>
	    {% if is_granted('ROLE_ADMIN') %}
	    <li>
	        <form action="{{ path('admin_transpage_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}
	</ul>
	
{% endblock %}