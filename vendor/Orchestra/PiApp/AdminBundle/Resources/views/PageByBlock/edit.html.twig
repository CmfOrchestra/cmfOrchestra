{%  initJquery 'FORM:prototype-bytab' %}

{% extends app.request.attributes.get('orchestra-layout')  %}

{% block title %}
	<h1>Page edit</h1>
{% endblock %}
 
{% block content %}

	<!-- Begin tag markup -->
	<div id="tabs">
		<ul>
			<li><a href="#tabs-1">{{ 'pi.page.block.title'|trans }}</a></li>
		</ul>

		{% form_theme edit_form getParameter('pi_app_admin.layout.template.form') %}
		<form class="myform" action="{{ path('admin_pagebyblock_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
			<div id="tabs-1">
				    {{ form_widget(edit_form) }} 
			</div>
		    <p>
		        <input id="add_tab" type="button" value="{{ 'pi.grid.action.add-tab'|trans }}" />
		        <button type="submit">{{ 'pi.grid.action.save'|trans }}</button>
		    </p>
		</form>

	</div>
	<!-- End tag markup -->
	
	{% set options = {'prototype-name': ['blocks'], 'prototype-tab-title': 'B'} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}
	
	<ul class="ui-widget-header">
	    <li>
	        <form action="{{ path('admin_pagebytrans') }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>
	    </li>
	    {% if is_granted('ROLE_ADMIN') %}
	    <li>
	        <form action="{{ path('admin_pagebyblock_delete', { 'id': entity.id }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}
	</ul>
	
{% endblock %}