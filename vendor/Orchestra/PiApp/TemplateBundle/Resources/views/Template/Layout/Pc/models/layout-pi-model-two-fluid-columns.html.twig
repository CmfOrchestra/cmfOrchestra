{% stylesheet "bundles/piappadmin/css/layout/pi/models/layout-pi-model-base.css" %}
{% stylesheet "bundles/piappadmin/css/layout/pi/models/layout-pi-model-two-fluid-columns.css" %}
{% extends "PiAppTemplateBundle::Template\\Layout\\layout-global.html.twig" %}

{% block global_title %}{{ parent() }}{% endblock %}

{% block global_meta %}{{ parent() }}{% endblock %}

{% block global_script_divers %}{{ parent() }}{% endblock %}

{% block global_layout %}

	<div id="global">

		<div id="entete">
			{% block pc_header %}
			<h1>
				<img src="/bundles/piappadmin/css/layout/pi/models/picto/05.png" alt="">
				Orchestra - Content Management Framework
			</h1>
			<p class="sous-titre">
				<strong>Caractéristiques:</strong>
				menu vertical à gauche,
				(fausses) colonnes de même hauteur,
				largeur fluide
			</p>
			{% endblock %}
		</div><!-- #entete -->

		<div id="menuleft">
			<div id="navigation">
				{% block pc_menuwrapper %}
				<ul>
					<li><a href="index.html">Accueil</a></li>
					<li><a href="liste.html">Tous les gabarits</a></li>
					<li><a href="utiliser.html">Utilisation</a></li>
					<li><a href="licence.html">Licence</a></li>
					<li><a href="credits.html">Crédits</a></li>
				</ul>
				{% endblock %}
			</div><!-- #navigation -->
			
			<div id="connexion">
			    {# {% include "BootStrapUserBundle::connexion-ul-li.html.twig" %} #}
				{% set widget_service_params = {"template":"PiAppTemplateBundle:Template@@@@@@@@Login@@@@@@@@Security:connexion-ajax.html.twig"} %} 
		 		{{ getService('pi_app_admin.manager.authentication').renderSource('BootStrapUserBundle:User~_connexion_default', 'fr_FR', widget_service_params)|raw }}
				
				<a href="{{ path('pi_layout_choisir_langue', {'langue' : 'fr_FR'}) }}" title="">FR</a> | <a href="{{ path('pi_layout_choisir_langue', {'langue' : 'en_GB'}) }}" title="">EN</a> | <a href="{{ path('pi_layout_choisir_langue', {'langue' : 'ar_SA'}) }}" title="">AR</a> | 
				<a href="www.cmf-orchestra.net" title="">cmf-orchestra.net</a> |		
	        </div><!-- #"connexion" -->
        </div>
        
		<div id="contenu">
			{% block content %}
			<h2>À propos du gabarit 05</h2>
			<h3>Code HTML et CSS</h3>
			<p>Ce gabarit est structuré de la manière suivante:</p>

			<p>Il est mis en forme par deux feuilles de styles:</p>
			<ol>
				<li><a href="styles/base.css">base.css</a> (mise en forme minimale
				du texte, commune à tous les gabarits)</li>
				<li><strong><a href="styles/modele05.css">modele05.css</a></strong>,
				qui contient tous les styles propres à ce gabarit, et que je vous
				invite à consulter.</li>
			</ol>
			<span>Mise en page d'après Elephorm et Alsacréations: www.alsacreations.com/gabarits</span>
			{% endblock %}
		</div><!-- #contenu -->

	</div><!-- #global -->
				     
{% endblock %}