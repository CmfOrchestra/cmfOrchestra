						<header class="tt-grey">
							<h3>{{ ('pi.session.flash.type.'~type)|trans|raw }}</h3>
						</header>
	                    {% for flashMessage in flashMessages %}
	                        {% if is_granted("ROLE_USER") or (type != 'permission') %}
						        {{ _self.flash(type, flashMessage) | raw }}
						    {% endif %}
						{% endfor %}
					{% endif %}
                {% endfor %} 
				</section>
			</div>
		</div>
	{% endif %}
{% endmacro %}