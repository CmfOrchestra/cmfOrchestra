{% extends "PiAppTemplateBundle:Template\\Login:layout.html.twig" %}

{% block fos_user_content %}
	{# {% include "FOSUserBundle:Resetting:reset_content.html.twig" %} #}
			
	<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
		<table border="0" cellpadding="0" cellspacing="0">
			<tr>
				<th style="padding:0 5px 0px 0;width:177px">&nbsp;</th>
				<td>
					<h3 class="uppercase bold tt-10">Nouveau mot de passe</h3>
					{{ form_errors(form) }}
				</td>
			</tr>		
			<tr>
				<th style="padding:0 5px 0px 0;width:177px">
					<label>Nouveau Mot de Passe<span>*</span> :</label>
				</th>
				<td>
					{{ form_widget (form.plainPassword.children['first'], { 'attr': { 'class': 'input required','type':'password' }}) }}
				</td>
			</tr>
			<tr>
				<th style="padding:0 5px 0px 0;width:177px">
					<label>Confirmation du nouveau Mot de Passe<span>*</span> :</label>
				</th>
				<td>
	 				{{ form_widget (form.plainPassword.children['second'], { 'attr': { 'class': 'input required','type':'password' }}) }}
				</td>
			</tr>
			<tr>
				<th style="padding:0 5px 0px 0;width:123px">
					<label>&nbsp;</label>
				</th>
				<td>
            		{{ form_widget(form._token) }}
	 				<input type="submit" class="btn-black" value="{{ 'resetting.reset.submit'|trans([], 'FOSUserBundle') }}"/>
				</td>
			</tr>		
		</table>
	</form>	
{% endblock fos_user_content %}
