<section class="bloc-generic tpl-4 cf">
	<div class="wrap">
		<figure>
			{% if entity.media.image.id is defined %}
			<img src="{{ media_url(entity.media.image.id, 'reference', true, entity.media.getUpdatedAt(), 'block_') }}" title="" alt="" />
			{% endif %}
		</figure>
		{{ entity.translate(locale).getContent()|raw }}
	</div>
</section>