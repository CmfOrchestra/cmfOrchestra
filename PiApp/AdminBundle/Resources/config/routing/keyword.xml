<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_keyword" pattern="/">
        <default key="_controller">PiAppAdminBundle:KeyWord:index</default>
    </route>

    <route id="admin_keyword_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:KeyWord:show</default>
    </route>

    <route id="admin_keyword_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:KeyWord:new</default>
    </route>

    <route id="admin_keyword_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:KeyWord:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_keyword_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:KeyWord:edit</default>
    </route>

    <route id="admin_keyword_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:KeyWord:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_keyword_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:KeyWord:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
