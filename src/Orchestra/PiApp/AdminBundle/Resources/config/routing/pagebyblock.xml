<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_pagebyblock" pattern="/">
        <default key="_controller">PiAppAdminBundle:PageByBlock:index</default>
    </route>

    <route id="admin_pagebyblock_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:PageByBlock:show</default>
    </route>

    <route id="admin_pagebyblock_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:PageByBlock:new</default>
    </route>

    <route id="admin_pagebyblock_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:PageByBlock:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_pagebyblock_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:PageByBlock:edit</default>
    </route>

    <route id="admin_pagebyblock_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:PageByBlock:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_pagebyblock_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:PageByBlock:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
