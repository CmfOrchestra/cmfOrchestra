<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_blockbywidget" pattern="/">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:index</default>
    </route>

    <route id="admin_blockbywidget_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:show</default>
    </route>

    <route id="admin_blockbywidget_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:new</default>
    </route>

    <route id="admin_blockbywidget_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_blockbywidget_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:edit</default>
    </route>

    <route id="admin_blockbywidget_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_blockbywidget_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:BlockByWidget:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
