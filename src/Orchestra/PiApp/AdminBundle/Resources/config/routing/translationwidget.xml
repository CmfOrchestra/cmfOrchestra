<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_transwidget" pattern="/">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:index</default>
    </route>

    <route id="admin_transwidget_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:show</default>
    </route>

    <route id="admin_transwidget_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:new</default>
    </route>

    <route id="admin_transwidget_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_transwidget_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:edit</default>
    </route>

    <route id="admin_transwidget_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_transwidget_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:TranslationWidget:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
