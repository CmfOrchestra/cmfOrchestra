<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_transpage" pattern="/">
        <default key="_controller">PiAppAdminBundle:TranslationPage:index</default>
    </route>

    <route id="admin_transpage_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:TranslationPage:show</default>
    </route>

    <route id="admin_transpage_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:TranslationPage:new</default>
    </route>

    <route id="admin_transpage_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:TranslationPage:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_transpage_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:TranslationPage:edit</default>
    </route>

    <route id="admin_transpage_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:TranslationPage:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_transpage_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:TranslationPage:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
