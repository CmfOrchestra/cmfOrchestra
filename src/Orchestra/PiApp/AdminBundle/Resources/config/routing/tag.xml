<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_tag" pattern="/">
        <default key="_controller">PiAppAdminBundle:Tag:index</default>
    </route>

    <route id="admin_tag_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:Tag:show</default>
    </route>

    <route id="admin_tag_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:Tag:new</default>
    </route>

    <route id="admin_tag_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:Tag:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_tag_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:Tag:edit</default>
    </route>

    <route id="admin_tag_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:Tag:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_tag_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:Tag:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
