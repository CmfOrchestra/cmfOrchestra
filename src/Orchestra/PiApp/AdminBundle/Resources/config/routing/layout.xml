<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_layout" pattern="/">
        <default key="_controller">PiAppAdminBundle:Layout:index</default>
    </route>

    <route id="admin_layout_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:Layout:show</default>
    </route>

    <route id="admin_layout_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:Layout:new</default>
    </route>

    <route id="admin_layout_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:Layout:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_layout_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:Layout:edit</default>
    </route>

    <route id="admin_layout_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:Layout:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_layout_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:Layout:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
