<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_comment" pattern="/">
        <default key="_controller">PiAppAdminBundle:Comment:index</default>
    </route>

    <route id="admin_comment_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:Comment:show</default>
    </route>

    <route id="admin_comment_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:Comment:new</default>
    </route>

    <route id="admin_comment_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:Comment:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_comment_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:Comment:edit</default>
    </route>

    <route id="admin_comment_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:Comment:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_comment_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:Comment:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
