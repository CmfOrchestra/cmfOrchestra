<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_rubrique" pattern="/">
        <default key="_controller">PiAppAdminBundle:Rubrique:index</default>
    </route>

    <route id="admin_rubrique_show" pattern="/{id}/show">
        <default key="_controller">PiAppAdminBundle:Rubrique:show</default>
    </route>

    <route id="admin_rubrique_new" pattern="/new">
        <default key="_controller">PiAppAdminBundle:Rubrique:new</default>
    </route>

    <route id="admin_rubrique_create" pattern="/create">
        <default key="_controller">PiAppAdminBundle:Rubrique:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_rubrique_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppAdminBundle:Rubrique:edit</default>
    </route>

    <route id="admin_rubrique_update" pattern="/{id}/update">
        <default key="_controller">PiAppAdminBundle:Rubrique:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_rubrique_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppAdminBundle:Rubrique:delete</default>
        <requirement key="_method">post</requirement>
    </route>
    
    <route id="admin_rubrique_tree" pattern="/tree">
        <default key="_controller">PiAppAdminBundle:Rubrique:tree</default>
    </route>        
    
    <route id="admin_rubrique_move_up" pattern="/{id}/node/move-up">
        <default key="_controller">PiAppAdminBundle:Rubrique:moveUp</default>
    </route>
    
    <route id="admin_rubrique_move_down" pattern="/{id}/node/move-down">
        <default key="_controller">PiAppAdminBundle:Rubrique:moveDown</default>
    </route>
    
    <route id="admin_rubrique_node_remove" pattern="/{id}/node/remove">
        <default key="_controller">PiAppAdminBundle:Rubrique:remove</default>
    </route>

</routes>