	<!-- Begin tag markup -->
	<div id="tabs">
		<ul>
			<li><a href="#tabs-1">{{ 'pi.widget.translation.title'|trans }}</a> <span class="ui-icon ui-icon-close">Remove
				Tab</span></li>
		</ul>
		
		{% form_theme edit_form getParameter('pi_app_admin.layout.template.form') %}
		<form class="myform" action="{{ path('admin_widget_update', { 'id': entity.id, 'NoLayout': NoLayout }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
			<div id="tabs-1">
				    {{ form_widget(edit_form) }} 
			</div>		    
		    <p>
		    	<input id="add_tab" type="button" value="{{ 'pi.grid.action.add-tab'|trans }}" />
		        <button type="submit">{{ 'pi.grid.action.save'|trans }}</button>
		    </p>
		</form>

	</div>
	<!-- End tag markup -->		
	
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'Translate'} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}	
	
	<ul class="record_actions">
		{% if entity.getBlock().getId() is defined %}
	    <li>
	        <form action="{{ path('admin_blockbywidget_show', { 'id': entity.getBlock().getId(), 'NoLayout': NoLayout }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	  
	    </li>
	    {% endif %}
	    <li>
	        <form action="{{ path('admin_widget_delete', { 'id': entity.id, 'NoLayout': NoLayout }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	</ul>