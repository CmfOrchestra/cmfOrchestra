{% initJquery 'TOOL:wizard' %}
{% initJquery 'GRID:grid-table' %}
{% stylesheet getParameter('pi_app_admin.admin.grid_theme_css') %}
{% extends app.session.get('wurfl-layout') %}

{% block title %}
	<h1>{{ 'pi.page.index.title'|trans }}</h1>
{% endblock %}
 
{% block content %}

	{% set options_wizard = 
		{
			'id': 'wizard', 
			'wizard-urls': { 
				'0': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.All', 'params':{'status':'all'} },
				'1': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Draft', 'params':{'status':'draft'} }, 
				'2': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Reviewed', 'params':{'status':'reviewed'} },
				'3': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Published', 'params':{'status':'published'} },
				'4': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Hidden', 'params':{'status':'hidden'} },
				'5': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Trash', 'params':{'status':'trash'} },
				'6': { 'route_name':'admin_pagebytrans_wizard', 'title':'pi.page.Refused', 'params':{'status':'refused'} },
			}
		} 
	%}
	{{ renderJquery('TOOL', 'wizard', options_wizard )|raw }}	
	
	<!--  start actions-box ............................................... -->
	<div id="actions-box">
		<a href="" class="action-slider"><span>{{ 'pi.grid.action.title'|trans }}</span></a>
		<div id="actions-box-slider">
			{#<a href="" class="action-edit">{{ 'pi.grid.action.edit'|trans }}</a>#}
			{#<a href="" class="action-delete">{{ 'pi.grid.action.delete'|trans }}</a>#}
			<a href="{{ path('admin_pagebytrans_new') }}" class="action-edit">{{ 'pi.grid.action.create'|trans }}</a>
		</div>
		<div class="clear"></div>
	</div>
	<!-- end actions-box........... -->
		
{% endblock %}