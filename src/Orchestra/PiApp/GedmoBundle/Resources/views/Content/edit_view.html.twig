	<!-- Begin tag markup -->
	<div id="tabs">
		<ul>
			<li><a href="#tabs-1">{{ 'pi.content.translation.title'|trans }}</a> <span class="ui-icon ui-icon-close">Remove Tab</span></li>
		</ul>

		{% form_theme edit_form getParameter('pi_app_admin.layout.template.form') %}
		<form class="myform" action="{{ path('admin_gedmo_content_update', { 'id': entity.id, 'NoLayout': NoLayout, 'category':category }) }}" method="post" {{ form_enctype(edit_form) }} novalidate>
		    <div id="tabs-1">
		    	{{ form_widget(edit_form) }}
		    </div>
		    <p>
		        <!-- <input id="add_tab" type="button" value="{{ 'pi.grid.action.add-tab'|trans }}" /> -->
		        <button type="submit">{{ 'pi.grid.action.save'|trans }}</button>
		    </p>		    
		</form>
		
	</div>
	<!-- End tag markup -->	
	
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'Translate'} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}
		
	<ul class="record_actions">
		<li>
	        <form action="{{ path('admin_gedmo_content', {'NoLayout':NoLayout, 'category':category}) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
		</li>
			
		{% if NoLayout == false %}
	    <li>
	        <form action="{{ path('admin_gedmo_content_delete', { 'id': entity.id, 'NoLayout': NoLayout, 'category':category}) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}
	</ul>