	<table class="grid">
		<caption>Menu</caption>
	    <tbody>	
	        <tr>
	            <th>Id</th>	
	            <td>{{ entity.id }}</td>	
	        </tr>	
	        <tr>
	            <th>Enabled</th>	
	            <td>{{ entity.enabled }}</td>	
	        </tr>
	        <tr>
	            <th>Slug</th>	
	            <td>{{ entity.slug }}</td>	
	        </tr>	
	        <tr>
	            <th>Category</th>	
	            <td>{{ entity.category }}</td>	
	        </tr>	
	        <tr>
	            <th>Title</th>	
	            <td>{{ entity.title }}</td>	
	        </tr>	
	        <tr>
	            <th>Published_at</th>	
	            <td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	            <th>Archive_at</th>	
	            <td>{{ entity.archiveat|date('Y-m-d H:i:s') }}</td>	
	        </tr>	
	        <tr>
	        	<th>Media</th>
	        	<td>
	        		{% if entity.media.image is defined %}
	        			{% media entity.media.image, 'reference' %}
	        		{% endif %}
	        	</td>
	        </tr>	        	
	    </tbody>
	</table>

	{% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}	
				
	<ul class="record_actions">
		<li>
	        <form action="{{ path('admin_gedmo_menu', {'NoLayout':NoLayout}) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
		</li>
			<li>
	        <form action="{{ path('admin_gedmo_menu_edit', { 'id': entity.id, 'NoLayout':NoLayout }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.edit'|trans }}</button>
	        </form>	        
		</li>
			
		{% if NoLayout == false %}
	    <li>
	        <form action="{{ path('admin_gedmo_menu_delete', { 'id': entity.id, 'NoLayout':NoLayout }) }}" method="post">
	            {{ form_widget(delete_form) }}
	            <button type="submit">{{ 'pi.grid.action.delete'|trans }}</button>
	        </form>
	    </li>
	    {% endif %}
	    
	</ul>
	
		<script type="text/javascript">
		//<![CDATA[
			$(document).ready(function() {
				$("button[type='submit']").button();
			});
		//]]>
		</script>
		
	{% endif %}		