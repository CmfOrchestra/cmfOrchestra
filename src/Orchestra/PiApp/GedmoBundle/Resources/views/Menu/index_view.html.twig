	<table id="grid_menu" class="grid" >
	    <thead>
	        <tr>	   
	        	<th><a>Id</a></th>	        
	            <th><a>Category</a></th>	    
	            <th><a>Parent</a></th>    
	            <th><a>Title</a></th>	        
	            <th><a>Enable</a></th>
	            <th><a>Actions</a></th>
	        </tr>
	    </thead>
	    <tbody>
	    {% set num_line = 0 %}
	    {% for entity in entities %}
	        <tr {% if(num_line == 0) %}class="odd"{% endif %} id="{{ entity.position }}_row_{{ entity.id }}"  >
	        	<td><a href="{{ path('admin_gedmo_menu_show', { 'id': entity.id, 'NoLayout': NoLayout }) }}">{{ entity.id }}</a></td>	
	            <td>
	            {{ entity.category }}
	            </td>	
	            {% set locale = app.session.getLocale() %}
	            <td>{% if entity.getParent().translate(locale).getTitle() is defined %}{{ entity.getParent().translate(locale).getTitle() }}{% endif%}</td>
	            <td>
	            {{ entity.title }}
	            </td>
	            <td class="enabled">{{ entity.enabled }}</td>	
				<td>
					<a href="{{ path('admin_gedmo_menu_show', { 'id': entity.id, 'NoLayout': NoLayout }) }}" title="{{ 'pi.grid.action.show'|trans }}" class="icon-3 info-tooltip" >&nbsp;</a>
					<a href="{{ path('admin_gedmo_menu_edit', { 'id': entity.id, 'NoLayout': NoLayout }) }}" title="{{ 'pi.grid.action.edit'|trans }}" class="icon-1 info-tooltip" >&nbsp;</a>
				</td>	
	        </tr>
	        
	        {% if num_line == 0 %} 
	        	{% set num_line = 1 %}
	        {% else %}
	        	{% set num_line = 0 %}
	        {% endif %}	
	                
	    {% endfor %}
	    </tbody>
	</table>

	<!--  start actions-box ............................................... -->
	<div id="actions-box">
		<a href="" class="action-slider"></a>
		<div id="actions-box-slider">
			<a href="" class="action-edit">{{ 'pi.grid.action.edit'|trans }}</a>
			<a href="" class="action-delete">{{ 'pi.grid.action.delete'|trans }}</a>
			<a href="{{ path('admin_gedmo_menu_new', {'NoLayout':NoLayout}) }}" class="action-edit">{{ 'pi.grid.action.create'|trans }}</a>
		</div>
		<div class="clear"></div>
	</div>
	<!-- end actions-box........... -->
	
	{% set options_gridtabale = {'grid-name': 'grid_menu', 'grid-type':'simple', 'grid-paginate':'true',
		'grid-filters': { 
				'1':'Identifiant',
				'2':'Category',
				'3':'Parent',
				'4':'Title',
				'5':'Enable' 
			},
		'grid-sorting': { 
				'1':'desc',
			},	
		'grid-actions': {
				'rows_grouping': {'columnIndex':1, 'Collapsible':'false'},
				'rows_enabled': {'sButtonText':'pi.grid.action.row_enabled', 'route':'admin_gedmo_menu_enabledentity_ajax',},
				'rows_disable': {'sButtonText':'pi.grid.action.row_disable', 'route':'admin_gedmo_menu_disablentity_ajax'},
				'select_all': {'sButtonText':'pi.grid.action.select_all'},
				'select_none': {'sButtonText':'pi.grid.action.select_none'},
			}				
		} 
	%}
	{{ renderJquery('GRID', 'grid-table', options_gridtabale )|raw }}	