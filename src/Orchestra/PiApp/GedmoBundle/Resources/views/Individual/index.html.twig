{% initJquery 'GRID:grid-table' %}
{% stylesheet getParameter('pi_app_admin.admin.grid_theme_css') %}
{% if NoLayout %}
	{% stylesheet 'bundles/piappadmin/css/layout/admin/screen.css' %}
	{% javascript 'bundles/piappadmin/js/jquery/custom_jquery.js' %}
	{% set layout_nav = 'PiAppTemplateBundle::Template\\Layout\\layout-ajax.html.twig' %}
{% else %}
	{% set layout_nav = app.session.get('wurfl-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
	<h1>Individual</h1>
{% endblock %}
 
{% block content %}

	<table id="grid_individual" class="grid" >
	    <thead>
	        <tr>	            
	            <th><a href="javascript:void(0);" title="Id">Id</a></th>	            
	            <th><a href="javascript:void(0);" title="Url">Url</a></th>	            
	            <th><a href="javascript:void(0);" title="Inscrname">Inscrname</a></th>	            
	            <th><a href="javascript:void(0);" title="Inscrnickname">Inscrnickname</a></th>	            
	            <th><a href="javascript:void(0);" title="Inscrphone">Inscrphone</a></th>	            
	            <th><a href="javascript:void(0);" title="Inscrjob">Inscrjob</a></th>	            
	            <th><a href="javascript:void(0);" title="Entrcompany">Entrcompany</a></th>	            
	            <th><a href="javascript:void(0);" title="Entractivity">Entractivity</a></th>	            
	            <th><a href="javascript:void(0);" title="Entrbusiness">Entrbusiness</a></th>	            
	            <th><a href="javascript:void(0);" title="Entrstaff">Entrstaff</a></th>	            
	            <th><a href="javascript:void(0);" title="Created_at">Created_at</a></th>	            
	            <th><a href="javascript:void(0);" title="Updated_at">Updated_at</a></th>	            
	            <th><a href="javascript:void(0);" title="Published_at">Published_at</a></th>	            
	            <th><a href="javascript:void(0);" title="Archive_at">Archive_at</a></th>	            
	            <th><a href="javascript:void(0);" title="Enabled">Enabled</a></th>	        	
	            <th class="position" ><a href="javascript:void(0);" title="Position">Position</a></th>	        
	            <th><a href="javascript:void(0);" title="Actions">Actions</a></th>
	        </tr>
	    </thead>
	    <tbody>
	    {% set num_line = 0 %}
	    {% for entity in entities %}
	        <tr {% if(num_line == 0) %}class="odd"{% endif %}  id='{{ entity.position }}_row_{{ entity.id }}'  >	
	            <td><a href="{{ path('admin_gedmo_individual_show', { 'id': entity.id, 'NoLayout': NoLayout, 'category':entity.category }) }}" title="">{{ entity.id }}</a></td>	
	            <td>
	            	{{ entity.url|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.InscrName|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.InscrNickname|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.InscrPhone|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.InscrJob|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.EntrCompany|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.EntrActivity|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.EntrBusiness|limite("0", 55)|raw }}
	            </td>	
	            <td>
	            	{{ entity.EntrStaff|limite("0", 55)|raw }}
	            </td>	
	            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d') }}{% endif%}</td>	
	            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d') }}{% endif%}</td>	
	            <td>{% if entity.publishedat %}{{ entity.publishedat|date('Y-m-d') }}{% endif%}</td>	
	            <td>{% if entity.archiveat %}{{ entity.archiveat|date('Y-m-d') }}{% endif%}</td>	
	            <td class="enabled" >{{ entity.enabled}}</td><td class="position" >{{ entity.position}}</td>	
				<td><a href="{{ path('admin_gedmo_individual_show', { 'id': entity.id, 'NoLayout':NoLayout, 'category':entity.category }) }}" title="{{ 'pi.grid.action.show'|trans }}" class="icon-3 info-tooltip" >&nbsp;</a>
                	                	<a href="{{ path('admin_gedmo_individual_edit', { 'id': entity.id, 'NoLayout':NoLayout, 'category':entity.category }) }}" title="{{ 'pi.grid.action.edit'|trans }}" class="icon-1 info-tooltip" >&nbsp;</a>
                	
				</td>	
	        </tr>
	        {% if num_line == 0 %} 
	        	{% set num_line = 1 %}
	        {% else %}
	        	{% set num_line = 0 %}
	        {% endif %}	
	                
	    {% endfor %}
	    </tbody>
	</table>

		{% if NoLayout == false %}
	<!--  start actions-box ............................................... -->
	<div id="actions-box">
		<a href="" class="action-slider"><span>{{ 'pi.grid.action.title'|trans }}</span></a>
		<div id="actions-box-slider">
			<a href="{{ path('admin_gedmo_individual_new', {'NoLayout':NoLayout, 'category':category}) }}" class="action-edit" title="{{ 'pi.grid.action.create'|trans }}">{{ 'pi.grid.action.create'|trans }}</a>
		</div>
		<div class="clear"></div>
	</div>
	<!-- end actions-box........... -->
	{% endif %}
	
	{% set options_gridtabale = {'grid-name': 'grid_individual', 'grid-type':'simple', 
			'grid-paginate':'true',
			'grid-filters': { 
					'1':'Position',
					'2':'Identifiant',
				},
			'grid-sorting': { 
					'0':'asc',
				},
			'grid-visible': {
				'0':'true',
				'1':'false',
				},						
			'grid-actions': { 
					'rows_position': {'route':'admin_gedmo_individual_position_ajax',},
					'rows_enabled': {'sButtonText':'pi.grid.action.row_enabled', 'route':'admin_gedmo_individual_enabledentity_ajax',},
					'rows_disable': {'sButtonText':'pi.grid.action.row_disable', 'route':'admin_gedmo_individual_disablentity_ajax'},
					'rows_delete': {'sButtonText':'pi.grid.action.row_delete', 'route':'admin_gedmo_individual_deletentity_ajax'},
					'select_all': {'sButtonText':'pi.grid.action.select_all'},
					'select_none': {'sButtonText':'pi.grid.action.select_none'},
				}		
			} 			
	%}
	{{ renderJquery('GRID', 'grid-table', options_gridtabale )|raw }}	

{% endblock %}