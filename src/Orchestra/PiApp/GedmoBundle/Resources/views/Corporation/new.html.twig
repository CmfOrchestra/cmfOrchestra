{%  initJquery 'FORM:prototype-bytab' %}
{% if NoLayout %}
	{% set layout_nav = 'PiAppTemplateBundle::Template\\Layout\\layout-ajax.html.twig' %}
{% else %}
	{% set layout_nav = app.session.get('wurfl-layout') %}
{% endif %}	
{% extends layout_nav %}

{% block title %}
	<h1>Corporation</h1>
{% endblock %}
 
{% block content %}

	<!-- Begin tag markup -->
	<div id="tabs">
		<ul>
			<li>
				<a href="#tabs-1" title="{{ 'pi.form.title.default.create'|trans }}">{{ 'pi.form.title.default.create'|trans }}</a>
				<span class="ui-icon ui-icon-close">Remove Tab</span>
			</li>
		</ul>

		{% form_theme form getParameter('pi_app_admin.layout.template.form') %}
		<form class="myform" action="{{ path('admin_gedmo_corporation_create', { 'NoLayout': NoLayout, 'category':category }) }}" method="post" {{ form_enctype(form) }} novalidate>
		    <div id="tabs-1">
		    	{{ form_widget(form) }}
		    </div>
		    <p>
		        <!-- <input id="add_tab" type="button" value="{{ 'pi.grid.action.add-tab'|trans }}" /> -->
		        <button type="submit">{{ 'pi.grid.action.create'|trans }}</button>
		    </p>		    
		</form>
		
	</div>
	<!-- End tag markup -->	
	
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'Translate'} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}
		
		
	<ul class="record_actions">
		<li>
	        <form action="{{ path('admin_gedmo_corporation', { 'NoLayout': NoLayout, 'category':category }) }}" method="post">
	            <button type="submit">{{ 'pi.grid.action.back-to-the-list'|trans }}</button>
	        </form>	        
		</li>
	</ul>
	
	<script type="text/javascript">
	//<![CDATA[
			j_prototype_bytabs.ftc_accordion_form("job_collection", "{{ 'pi.corporation.form.group.job'|trans }}", ".myform");
			j_prototype_bytabs.ftc_accordion_form("info1_collection", "{{ 'pi.corporation.form.group.info1'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("info2_collection", "{{ 'pi.corporation.form.group.info2'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_entre_collection", "{{ 'pi.corporation.form.group.contact.entre'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_mother_collection", "{{ 'pi.corporation.form.group.contact.entre.mother'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("contact_facuration_collection", "{{ 'pi.corporation.form.group.contact.entre.facturation'|trans }}", ".myform");
	        j_prototype_bytabs.ftc_accordion_form("social_collection", "{{ 'pi.corporation.form.group.social'|trans }}", ".myform");	        
			j_prototype_bytabs.ftc_accordion_form("image_collection", "{{ 'pi.corporation.form.group.picture'|trans }}", ".myform");			        
	//]]>
	</script>	
{% endblock %}