<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_gedmo_newsletter" pattern="/">
        <default key="_controller">PiAppGedmoBundle:Newsletter:index</default>
    </route>

    <route id="admin_gedmo_newsletter_show" pattern="/{id}/show">
        <default key="_controller">PiAppGedmoBundle:Newsletter:show</default>
    </route>

    <route id="admin_gedmo_newsletter_new" pattern="/new">
        <default key="_controller">PiAppGedmoBundle:Newsletter:new</default>
    </route>

    <route id="admin_gedmo_newsletter_create" pattern="/create">
        <default key="_controller">PiAppGedmoBundle:Newsletter:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_newsletter_edit" pattern="/{id}/edit">
        <default key="_controller">PiAppGedmoBundle:Newsletter:edit</default>
        <requirement key="id">\d*</requirement>
    </route>

    <route id="admin_gedmo_newsletter_update" pattern="/{id}/update">
        <default key="_controller">PiAppGedmoBundle:Newsletter:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_gedmo_newsletter_delete" pattern="/{id}/delete">
        <default key="_controller">PiAppGedmoBundle:Newsletter:delete</default>
        <requirement key="_method">post</requirement>
    </route>

</routes>
