<div>
{% if is_granted("IS_AUTHENTICATED_FULLY") %}
    <a href="{{ path('fos_user_profile_show') }}" title="">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a> | <a href="{{ path('fos_user_security_logout') }}" title="">{{ 'layout.logout'|trans([], 'FOSUserBundle') }}</a>
{% else %}
    <a href="{{ path('fos_user_security_login') }}" title="">{{ 'layout.login'|trans([], 'FOSUserBundle') }}</a> |
    <a href="{{ path('fos_user_registration_register') }}" title="">{{ 'layout.register'|trans([], 'FOSUserBundle') }}</a>
{% endif %}
</div>

{% for key, flashMessage in app.session.flashbag.all() %}
	<div class="{{ flashMessage }}">
	    {{ key|trans([], 'FOSUserBundle') }}
	</div>	
{% endfor %}