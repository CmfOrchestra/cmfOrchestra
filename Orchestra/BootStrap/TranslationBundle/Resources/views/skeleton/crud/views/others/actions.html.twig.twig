                {%- for action in record_actions %}                	
                	{%- if action == 'show' -%}
                	<a href="{{ "{{ path('"~ route_name_prefix ~"_"~ action ~"', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" }}" title="{{ "{{ 'pi.grid.action.show'|trans }}" }}" class="button-ui-show info-tooltip">{{ "{{ 'pi.grid.action.show'|trans }}" }}</a>
                	{% else %}
                	<a href="{{ "{{ path('"~ route_name_prefix ~"_"~ action ~"', { 'id': entity.id, 'NoLayout':NoLayout, 'category':category }) }}" }}" title="{{ "{{ 'pi.grid.action.edit'|trans }}" }}" class="button-ui-edit info-tooltip">{{ "{{ 'pi.grid.action.edit'|trans }}" }}</a>
                	{% endif %}                    
                {%- endfor %}