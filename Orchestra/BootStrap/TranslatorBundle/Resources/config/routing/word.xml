<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_word" pattern="/">
        <default key="_controller">BootStrapTranslatorBundle:Word:index</default>
    </route>

    <route id="admin_word_show" pattern="/{id}/show">
        <default key="_controller">BootStrapTranslatorBundle:Word:show</default>
    </route>

    <route id="admin_word_new" pattern="/new">
        <default key="_controller">BootStrapTranslatorBundle:Word:new</default>
    </route>

    <route id="admin_word_create" pattern="/create">
        <default key="_controller">BootStrapTranslatorBundle:Word:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_word_edit" pattern="/{id}/edit">
        <default key="_controller">BootStrapTranslatorBundle:Word:edit</default>
    </route>

    <route id="admin_word_update" pattern="/{id}/update">
        <default key="_controller">BootStrapTranslatorBundle:Word:update</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_word_delete" pattern="/{id}/delete">
        <default key="_controller">BootStrapTranslatorBundle:Word:delete</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="admin_word_translate" pattern="/{id}/translate">
        <default key="_controller">BootStrapTranslatorBundle:Word:translate</default>
    </route>

    <route id="admin_word_edit_translate" pattern="/{id}/{lang}/edit_translate">
        <default key="_controller">BootStrapTranslatorBundle:Word:editTranslate</default>
    </route>

    <route id="admin_word_update_translate" pattern="/{id}/{lang}/update_translate">
        <default key="_controller">BootStrapTranslatorBundle:Word:updateTranslate</default>
        <requirement key="_method">post</requirement>
    </route>
</routes>
